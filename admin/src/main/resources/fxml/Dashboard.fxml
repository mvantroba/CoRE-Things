<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.thk.rdw.admin.controller.DashboardController">
	<children>
		<HBox styleClass="target" VBox.vgrow="NEVER">
			<children>
				<ChoiceBox fx:id="scheme" styleClass="scheme" HBox.hgrow="NEVER" />
				<Label styleClass="separator" text="://">
				</Label>
				<TextField fx:id="host" promptText="%field.prompt.host"
					styleClass="host" />
				<Label styleClass="separator" text=":">
				</Label>
				<TextField fx:id="port" promptText="%field.prompt.port"
					styleClass="port" />
				<Label styleClass="separator" text="/">
				</Label>
				<TextField fx:id="variables" promptText="%field.prompt.variables"
					HBox.hgrow="ALWAYS" />
				<ButtonBar HBox.hgrow="NEVER">
					<buttons>
						<Button defaultButton="true" mnemonicParsing="false"
							onAction="#onActionDiscover" text="%button.discover" />
						<Button mnemonicParsing="false" onAction="#onActionPing"
							text="%button.ping" />
					</buttons>
				</ButtonBar>
			</children>
		</HBox>
		<VBox styleClass="container-sub" VBox.vgrow="ALWAYS">
			<children>
				<HBox fx:id="notificationContainer" VBox.vgrow="NEVER" />
				<HBox VBox.vgrow="ALWAYS">
					<children>
						<VBox styleClass="card" HBox.hgrow="ALWAYS">
							<children>
								<Label styleClass="card-heading" text="%card.title.resources"
									VBox.vgrow="NEVER" />
								<TreeView fx:id="resourceTree" VBox.vgrow="ALWAYS" />
							</children>
						</VBox>
						<VBox styleClass="card" HBox.hgrow="ALWAYS">
							<children>
								<Label styleClass="card-heading" text="%card.title.details"
									VBox.vgrow="NEVER">
								</Label>
								<TextArea VBox.vgrow="ALWAYS">
								</TextArea>
							</children>
						</VBox>
						<VBox HBox.hgrow="ALWAYS">
							<children>
								<VBox styleClass="card" VBox.vgrow="ALWAYS">
									<children>
										<Label styleClass="card-heading" text="%card.title.request"
											VBox.vgrow="NEVER" />
										<TextArea VBox.vgrow="ALWAYS" />
									</children>
								</VBox>
								<ButtonBar VBox.vgrow="NEVER">
									<buttons>
										<Button mnemonicParsing="false" text="%button.get" />
										<Button mnemonicParsing="false" text="%button.post" />
										<Button mnemonicParsing="false" text="%button.put" />
										<Button mnemonicParsing="false" text="%button.delete" />
									</buttons>
								</ButtonBar>
								<VBox styleClass="card" VBox.vgrow="ALWAYS">
									<children>
										<Label styleClass="card-heading" text="%card.title.response"
											VBox.vgrow="NEVER" />
										<TextArea VBox.vgrow="ALWAYS" />
									</children>
								</VBox>
							</children>
						</VBox>
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
</VBox>
