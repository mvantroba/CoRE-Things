<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox fx:id="pane" styleClass="card-top" xmlns="http://javafx.com/javafx/8.0.65"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.thk.rdw.admin.controller.NotificationController">
	<children>
		<Pane fx:id="icon" styleClass="notificationIcon">
			<children>
				<ImageView pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="@../img/ic_info_blue_36x36.png" />
					</image>
				</ImageView>
			</children>
		</Pane>
		<Label fx:id="message" text="%notification.general.welcome">
		</Label>
	</children>
	<styleClass>
		<String fx:value="card" />
		<String fx:value="notification" />
		<String fx:value="notification-info" />
	</styleClass>
</HBox>
